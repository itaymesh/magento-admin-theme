<?xml version="1.0"?>
<layout version="0.1.0">
    <default translate="label" module="page">
        <reference name="head">
            <action method="removeItem"><type>js</type><name>mage/adminhtml/sales.js</name></action>
            <action method="addItem"><type>skin_js</type><script>js/sales.js</script></action>
            
            <!-- remove all default CSS files -->            
                        
	        <action method="removeItem"><type>skin_css</type><name>reset.css</name></action>
	        <action method="removeItem"><type>skin_css</type><name>boxes.css</name></action>
	        <action method="removeItem"><type>skin_css</type><name>custom.css</name></action>
	
	        <action method="removeItem"><type>skin_css</type><name>iestyles.css</name></action>
	        <action method="removeItem"><type>skin_css</type><name>below_ie7.css</name></action>
	        <action method="removeItem"><type>skin_css</type><name>ie7.css</name></action>
	
	        <action method="removeItem"><type>skin_css</type><name>print.css</name></action>
	
	        
	        <action method="removeItem"><type>skin_css</type><name>menu.css</name></action>
	
	        <action method="removeItem"><type>js_css</type><name>calendar/calendar-win2k-1.css</name></action>
	        	        
	        <action method="removeItem"><type>js_css</type><name>extjs/resources/css/ext-all.css</name></action>
	        <action method="removeItem"><type>js_css</type><name>extjs/resources/css/ytheme-magento.css</name></action>

             
             <!-- +++++++++++++ ADD LESS FILES -->
            <action method="addItem"><type>skin_css</type><name>reset.less</name></action>
	        <action method="addItem"><type>skin_css</type><name>boxes.less</name></action>
	        <action method="addItem"><type>skin_css</type><name>custom.less</name></action>
	        
			<action method="addItem"><type>skin_css</type><name>menu.less</name><params>media="screen, projection"</params></action>
			
			<!-- IE conditional CSS styles -->             
			<action method="addItem"><type>skin_css</type><name>iestyles.less</name><params/><if>lt IE 8</if></action>
			<action method="addItem"><type>skin_css</type><name>below_ie7.less</name><params/><if>lt IE 7</if></action>
			<action method="addItem"><type>skin_css</type><name>ie7.less</name><params/><if>IE 7</if></action>
                  
            <!-- Print CSS -->
			<action method="addCss"><name>print.less</name><params>media="print"</params></action>
			
			<!-- additional CSS -->
			<action method="addItem"><type>skin_css</type><name>calendar.less</name><params/></action>
			                        
        </reference>
        
        
        <reference name="footer">
            <action method="setTemplate">
                <!-- needed because of base/default/layout/bubbleadmintheme.xml -->
                <template>page/footer.phtml</template>
            </action>
        </reference>
    </default>
</layout>