<?xml version="1.0"?>
<layout version="0.1.0">
    <default translate="label" module="page">
        <reference name="head">
            <action method="removeItem"><type>js</type><name>mage/adminhtml/sales.js</name></action>
            <action method="addItem"><type>skin_js</type><script>js/sales.js</script></action>
            
            <!-- remove all default CSS files -->            
                        
	        <action method="removeItem"><name>reset.css</name></action>
	        <action method="removeItem"><name>boxes.css</name></action>
	        <action method="removeItem"><name>custom.css</name></action>
	
	        <action method="removeItem"><type>skin_css</type><name>iestyles.css</name><params/><if>lt IE 8</if></action>
	        <action method="removeItem"><type>skin_css</type><name>below_ie7.css</name><params/><if>lt IE 7</if></action>
	        <action method="removeItem"><type>skin_css</type><name>ie7.css</name><params/><if>IE 7</if></action>
	
	        <action method="removeItem"><name>print.css</name><params>media="print"</params></action>
	
	        
	        <action method="removeItem"><type>skin_css</type><name>menu.css</name><params>media="screen, projection"</params></action>
	
	        <action method="removeItem"><type>js_css</type><name>calendar/calendar-win2k-1.css</name><params/><!--<if/><condition>can_load_calendar_js</condition>--></action>
	        
	        
	        <action method="removeItem"><type>js_css</type><name>extjs/resources/css/ext-all.css</name><params/><if/><condition>can_load_ext_js</condition></action>
	        <action method="removeItem"><type>js_css</type><name>extjs/resources/css/ytheme-magento.css</name><params/><if/><condition>can_load_ext_js</condition></action>

                  
                        
        </reference>
        
        
        <reference name="footer">
            <action method="setTemplate">
                <!-- needed because of base/default/layout/bubbleadmintheme.xml -->
                <template>page/footer.phtml</template>
            </action>
        </reference>
    </default>
</layout>